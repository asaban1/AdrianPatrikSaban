<Window x:Class="FootballData.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Football Data" Height="720" Width="1280" ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen" FontFamily="Algerian">
    <Grid VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <DockPanel Background="#FF2C3E50" Height="50" LastChildFill="True">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="31*" />
                    <ColumnDefinition Width="575*"/>
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="txtWorldCupTitle" Foreground="White"
                   FontSize="30" FontWeight="Bold" VerticalAlignment="Center" 
                   HorizontalAlignment="Left" Grid.Column="1" FontFamily="Algerian" Margin="438,0,0,0"/>

                <Button x:Name="btnSettings" Content="Settings" Grid.Column="1" Margin="1120,0,10,0"
                VerticalAlignment="Center" Click="Settings_Click" TextBlock.FontFamily="Algerian" Grid.ColumnSpan="2"/>
            </Grid>
        </DockPanel>

        <Grid Grid.Row="2" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="txtFavoriteTeam" Grid.Row="0" Grid.Column="0" Text="Favorite Team:" FontWeight="Bold" VerticalAlignment="Center"/>

            <ComboBox Grid.Row="0" Grid.Column="1" x:Name="cmbFavoriteTeam" Width="150"
                      SelectionChanged="cmbFavoriteTeam_SelectionChanged" HorizontalAlignment="Stretch"/>

            <Button Grid.Row="0" Grid.Column="2" Content="Info" Width="80" VerticalAlignment="Center" 
                    Click="FavoriteTeam_Info"/>

            <TextBlock x:Name="txtOpponentTeam" Grid.Row="0" Grid.Column="4" Text="Opponent Team:" FontWeight="Bold" VerticalAlignment="Center"/>

            <ComboBox Grid.Row="0" Grid.Column="5" x:Name="cmbOpponentTeam" Width="150"
                      SelectionChanged="cmbOpponentTeam_SelectionChanged" HorizontalAlignment="Stretch"/>

            <Button Grid.Row="0" Grid.Column="6" Content="Info" Width="80" VerticalAlignment="Center" 
                    Click="OpponentTeam_Info"/>

            <TextBlock x:Name="txtMatchResult" Grid.Row="0" Grid.Column="3" Grid.ColumnSpan="2" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       FontSize="16" FontWeight="Bold" Text=" " />
        </Grid>

        <Grid Grid.Row="3" Margin="10,10,10,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Row="0" Grid.Column="0" Margin="0,10,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="txtMatchInfo" Text="Match Info" FontWeight="Bold" FontSize="20" Grid.Column="0" Margin="0,-4,10,4"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="5,0">
                    <TextBlock x:Name="txtCurrentScore" Text="" FontWeight="Bold" FontSize="16" Margin="10,0"/>
                    <TextBlock x:Name="txtVenue" Text="" FontWeight="Bold" HorizontalAlignment="Stretch" FontSize="16" Margin="10,0"/>
                    <TextBlock x:Name="txtAttendance" Text="" FontWeight="Bold" HorizontalAlignment="Stretch" FontSize="16" Margin="10,0"/>
                </StackPanel>
            </Grid>
            <Canvas x:Name="FieldCanvas" Grid.Column="0" Margin="10,66,250,0" Width="1000" Height="500" Grid.ColumnSpan="2">
                <Image x:Name="FieldBackground" HorizontalAlignment="Center" VerticalAlignment="Top"
                       Source="/SoccerField.jpg" Width="1000" Height="500" Stretch="Fill" Canvas.Top="-10"/>
            </Canvas>
            <RichTextBox x:Name="txtPlayerNames" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
             Margin="75,10,0,0" IsReadOnly="True" Grid.Column="1" />
        </Grid>
    </Grid>
</Window>
