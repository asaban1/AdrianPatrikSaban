<UserControl x:Class="FootballData.WPF.PlayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="80" Width="50">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
        <Button Name="PlayerButton" Click="PlayerButton_Click" BorderThickness="2" Height="40" Width="50">
            <TextBlock Name="PlayerNumber" HorizontalAlignment="Center"/>
            <Button.Background>
                <ImageBrush x:Name="PlayerImageBrush" ImageSource="/DefaultPlayerImage.png"/>
            </Button.Background>
            <Button.BorderBrush>
                <SolidColorBrush x:Name="PlayerBorderBrush" Color="Black"/>
            </Button.BorderBrush>
        </Button>
        <TextBlock Name="PlayerName" HorizontalAlignment="Center" FontWeight="Bold" FontSize="7" TextWrapping="WrapWithOverflow" MaxWidth="80"/>
    </StackPanel>
</UserControl>
