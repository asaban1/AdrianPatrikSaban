<Window x:Class="FootballData.WPF.PlayerStats"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Player Stats" Height="400" Width="400" WindowStyle="ToolWindow" WindowStartupLocation="CenterOwner" FontFamily="Algerian"
        Focusable="True">
    <Grid>
        <StackPanel>
            <Image x:Name="PlayerImage" Source="/DefaultPlayerImage.png" Height="150" Width="150" Margin="0,10" HorizontalAlignment="Center" />
            <TextBlock x:Name="PlayerNameTextBlock" FontSize="22" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Center" />
            <TextBlock x:Name="PlayerNumberTextBlock" FontSize="18" TextAlignment="Center" HorizontalAlignment="Center" />
            <TextBlock x:Name="PlayerPositionTextBlock" FontSize="18" TextAlignment="Center" HorizontalAlignment="Center" />
            <TextBlock x:Name="PlayerGoalsTextBlock" FontSize="18" TextAlignment="Center" HorizontalAlignment="Center" />
            <TextBlock x:Name="PlayerYellowCardsTextBlock" FontSize="18" TextAlignment="Center" HorizontalAlignment="Center" />
        </StackPanel>
    </Grid>
</Window>
