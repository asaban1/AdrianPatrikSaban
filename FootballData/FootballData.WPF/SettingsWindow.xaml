<Window x:Class="FootballData.WPF.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="370" Width="400"
        WindowStyle="ToolWindow" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Closing="SettingsWindow_Closing" FontFamily="Algerian">
    <Grid Margin="10,95,10,-75">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="txtTournament" Text="Tournament:" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" Margin="5" />
        <ComboBox x:Name="cmbChampionship" Grid.Row="0" Grid.Column="1" Margin="5">
            <ComboBoxItem Content="men" />
            <ComboBoxItem Content="women" />
        </ComboBox>

        <TextBlock x:Name="txtLanguage" Text="Language:" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" Margin="5" />
        <ComboBox x:Name="cmbLanguage" Grid.Row="1" Grid.Column="1" Margin="5">
            <ComboBoxItem Content="en" />
            <ComboBoxItem Content="hr" />
        </ComboBox>

        <TextBlock x:Name="txtWindowSize" Text="Window Size:" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0" Margin="5" />
        <ComboBox x:Name="cmbWindowSize" Grid.Row="2" Grid.Column="1" Margin="5">
            <ComboBoxItem Content="Fullscreen" />
            <ComboBoxItem Content="1280x720" />
            <ComboBoxItem Content="1366x768" />
            <ComboBoxItem Content="1600x900" />
        </ComboBox>

        <TextBlock x:Name="txtDataSource" Text="Data Source:" VerticalAlignment="Center" Grid.Row="3" Grid.Column="0" Margin="5" />
        <ComboBox x:Name="cmbDataSource" Grid.Row="3" Grid.Column="1" Margin="5">
            <ComboBoxItem Content="API" />
            <ComboBoxItem Content="Local JSON" />
        </ComboBox>

        <Button x:Name="btnSave" Content="Save" Grid.Row="4" Margin="10,5,0,5" Width="100" HorizontalAlignment="Left" Click="SaveSettings_Click" Grid.Column="1" />
        <Button x:Name="btnCancel" Content="Cancel" Grid.Row="4" Margin="145,5,0,5" Width="100" HorizontalAlignment="Left" Click="CancelSettings_Click" Grid.Column="1" />

        <Button x:Name="btnOpenWinFormsApp" Content="Open WinForms App" 
                Grid.Row="5" Margin="10,32,0,0" Width="200" 
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Click="OpenWinFormsApp_Click" Grid.Column="1" />
    </Grid>
</Window>
